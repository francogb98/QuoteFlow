declare module "next-auth" {
  interface Session {
    user: {
      id: string;
      nombre: string;
      documento: string;
      empresa: string;
      telefono: string;
      plan: "MES" | "ANUAL" | "PRUEBA";
      claveMercadoPago?: string;
      usuarios?: Array<{
        id: string;
        nombre: string;
        apellido: string;
        documento: string;
        telefono?: string;
        estado: "PAGADO" | "PENDIENTE" | "MORA" | "EXTRA_MORA" | "INACTIVO";
        estaActivo: boolean;
      }>;
    } & DefaultSession["user"];
  }
}

declare module "next-auth/jwt" {
  interface JWT {
    id: string;
    nombre: string;
    documento: string;
    empresa: string;
    telefono: string;
    plan: "MES" | "ANUAL" | "PRUEBA";
    claveMercadoPago?: string;
  }
}
